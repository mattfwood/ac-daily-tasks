datasource postgresql {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

// --------------------------------------
model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String?
  token String? @unique
  tasks Task[]
}

model Task {
  id           Int       @default(autoincrement()) @id
  name         String
  completed_at DateTime?
  created_at   DateTime  @default(now())
  user         User      @relation(fields: [userId], references: [id])
  userId       Int
  category     String?
}